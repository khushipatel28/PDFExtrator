@model pdf1.Models.PdfModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Processing</title>
</head>
<body>
    <h1>Upload PDF</h1>

    <form asp-action="Upload" method="post" enctype="multipart/form-data">
        <input type="file" name="PdfFile" />
        <button type="submit">Upload</button>
    </form>

    @if (Model != null && !string.IsNullOrEmpty(Model.ExtractedText))
    {
        <h2>Extracted Text:</h2>
        <pre>@Model.ExtractedText</pre>

        <h2>API Response:</h2>
        <pre>@Model.ApiResponse</pre>
    }
    <form asp-action="UploadFromUrl" method="post" enctype="multipart/form-data">
        <input type="url" name="PdfUrl" />
        <button type="submit">Upload</button>
    </form>

    <form asp-action="UploadFromFolder" method="post">
        <div class="form-group">
            <label for="folderPath">Folder Path:</label>
            <input type="text" class="form-control" id="folderPath" name="folderPath" placeholder="Enter folder path" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


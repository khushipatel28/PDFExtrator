@model IEnumerable<pdf1.Models.Skillgroup>

<h2>Skillgroups</h2>

<table class="table">
    <thead>
        <tr>
            <th>Skillgroup</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Skill_group</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SkillgroupId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SkillgroupId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>
